<p id="notice"><%= notice %></p>

<div class="row">
  <div class="container-fluid" style="text-align:center;">
    <div class="btn-group" role="group">
      <button type="button" class="btn btn-default" id="tree-btn">Tree</button>
      <button type="button" class="btn btn-default" id="cloud-btn">Cloud</button>
    </div>
    <p>there are <%= @responses.count %> responses for this email</p>
  </div>
</div>

<script type="text/javascript">
  window.rawdata = [<%= raw @responses.map{ |r| sanitize r.content.downcase.gsub(/[^a-z0-9\s]/i, '') }.to_json %>];
  window.top_words = <%= raw top_words(@responses).to_json %>
  google.charts.setOnLoadCallback(drawChart);
  document.getElementById("tree-btn").onclick = loadTree
  document.getElementById("cloud-btn").onclick = loadCloud(window.top_words)
</script>


<div id="vis_div" style="width: 100%; height: 500px;"></div>
